<Window x:Class="Contacts_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contacts Manager" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <DataGrid x:Name="ContactsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                <DataGridTemplateColumn Header="Favorite">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsFavorite}" IsEnabled="False" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded}" />
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edit"
                                        Click="EditContact_Click"
                                        Tag="{Binding ContactId}"
                                        Margin="2"/>
                                <Button Content="Delete"
                                        Click="DeleteContact_Click"
                                        Tag="{Binding ContactId}"
                                        Background="Red"
                                        Foreground="White"
                                        Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="SearchTextBox" Width="200" 
             TextChanged="SearchTextBox_TextChanged" 
             Margin="0,0,10,0" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="Add Contact"
                    Width="100" Height="30" Margin="10"
                    Click="AddContact_Click"/>
            <Button Content="Refresh"
                    Width="100" Height="30" Margin="10"
                    Click="Refresh_Click"/>
            <Button Content="Export to CSV"
                    Width="120" Height="30" Margin="10"
                    Click="ExportToCsv_Click"/>
        </StackPanel>
    </Grid>
</Window>
